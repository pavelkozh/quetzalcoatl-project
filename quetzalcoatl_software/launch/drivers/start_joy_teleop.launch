<?xml version="1.0"?>
<launch>
    <node pkg="joy" type="joy_node" name="joystick" output="screen" >
        <param name="dev" value="/dev/input/js0" />
    </node>

    <node pkg="quetzalcoatl_software" type="joy_ctrl.py" name="joy_ctrl" output="screen" >
    	<param name="debug" value="false" />

    	<param name="speed/frwd_limit" value="2.5" />
    	<param name="speed/bkwrd_limit" value="-2.5" />
    	<param name="steer/limit" value="20" />

        <remap from="cmd_vel" to="quetzalcoatl/cmd_vel" />
    </node>

</launch>
